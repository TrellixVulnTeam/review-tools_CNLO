from __future__ import print_function
import sys

import clickreviews.cr_common as cr_common
import clickreviews.cr_systemd as cr_systemd

if __name__ == "__main__":
    if len(sys.argv) < 2:
        cr_common.error("Must give path to click package")

    review = cr_systemd.ClickReviewSystemd(sys.argv[1])
    review.do_checks()
    rc = review.do_report()
    sys.exit(rc)
